<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUserFragment"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/tv_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="Profile"
        android:textColor="@color/white"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foto_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/esti2"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="#515151"
        app:strokeWidth="5dp"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_bar"
        android:layout_marginLeft="15dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/foto_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/baseline_account_circle_24"/>

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/img_user"
        app:layout_constraintLeft_toRightOf="@id/img_user"
        app:layout_constraintBottom_toBottomOf="@id/img_user"
        android:text="Your Username"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/img_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/baseline_email_24"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/img_email"
        app:layout_constraintLeft_toRightOf="@id/img_email"
        app:layout_constraintBottom_toBottomOf="@id/img_email"
        android:text="YourEmail@Gmail.com"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/img_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Logout"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/img_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Logout"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>